<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <solid
                android:color="#FAF7F7"/>
            <stroke
                android:width="1dp"
                android:color="#FAF7F7"/>
            <corners
                android:radius="7dp"/>
            <padding
                android:left="10dp"
                android:bottom="10dp"
                android:right="10dp"
                android:top="10dp"/>

        </shape>
    </item>
    <item  android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#F5D52D"
                android:endColor="#F0E504"
                android:angle="270"/>
            <stroke
                android:width="1dp"
                android:color="#adbfc9"/>
            <corners
                android:radius="7dp"/>
            <padding
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"
                android:left="10dp"/>
        </shape>
    </item>
</selector>